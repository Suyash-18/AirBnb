<% layout("/layouts/boilerplate")%>

<body>
    <br>
    <h3>Enter Information of New Listings :</h3>
    <br>
    <div class="row">
        <div class="col-8 offset-2">
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
            <label for="title" class="form-lable">Title : </label>
            <input type="text" name="listing[title]" id="title" placeholder="Add the Title..." class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div><div class="invalid-feedback">
                Please enter a Title.
              </div>
        </div>
        <br>
        <div>
            <label for="description" class="form-lable">Description : </label>
            <input type="text" name="listing[description]" id="description" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div><div class="invalid-feedback">
                Please enter a short Description!!!.
              </div>
        </div>
        <br>
        <div>
            <label for="image"class="form-lable">Upload Image : </label>
            <input type="file" name="listing[image]" id="image"  class="form-control">
        </div>
        <br>
        <div class="row">
        <div class="col-md-4">
            <label for="price" class="form-lable">Price : </label>
            <input type="text" name="listing[price]" id="price" placeholder="1300..." class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div><div class="invalid-feedback">
                Please enter a valid Price!!!.
              </div>
        </div>
        <br>
        <div class="col-md-8">
            <label for="country" class="form-lable">Country : </label>
            <input type="text" name="listing[country]" id="country" placeholder="India..." class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div><div class="invalid-feedback">
                Please enter a valid Country!.
              </div>
        </div>
    </div>
        <br>
        <div>
            <label for="location" >Location : </label>
            <input type="text" name="listing[location]" id="location" placeholder="Nagpur..." class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div><div class="invalid-feedback">
                Please enter a valid Location!.
              </div>
        </div>
        <br>
        <button type="submit" class="btn btn-dark form-btn">Submit information</button>
        <br><br>
    </form>
</div>
</div>
</body>
