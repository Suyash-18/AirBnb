<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h3>Signup on Wanderlust</h3>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-lable">Username : </label>
                <input type="text" name="username" id="username" placeholder="Add the Username..." class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                  </div><div class="invalid-feedback">
                    Please enter a username.
                  </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-lable">Email : </label>
                <input type="email" name="email" id="email" placeholder="Add the Email..." class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-lable">Password : </label>
                <input type="password" name="password" id="password" placeholder="Add the Password..." class="form-control" required>
            </div>
            <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>
